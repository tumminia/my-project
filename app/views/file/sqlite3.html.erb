
<nav id="giacenza">
<table>
<thead>    
<tr>
<th colspan="3">Giacenza in frigorifero</th>
</tr>
<tr>
<th>Ingredienti</th>
<th>Quantità (Kg)</th>
<th>Giacenza</th>
</tr>
</thead>

<tbody>
<% if @frigorifero.present? %>
    <% @frigorifero.each do |row| %>
      <tr>
        <td><%= row["ingrediente"] %></td>
        <td><%= row["quantita"] %></td>
        <td><%= row["giacenza"] %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="3">⚠️ Nessun dato trovato</td>
    </tr>
  <% end %>
</tbody>
</table>

</nav>

 
